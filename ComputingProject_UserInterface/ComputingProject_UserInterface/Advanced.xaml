<Window x:Class="ComputingProject_UserInterface.Advanced"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputingProject_UserInterface"
      mc:Ignorable="d"
      Title="Advanced" Height="282" Width="250" ResizeMode="NoResize">

    <Grid Background="White">
        <Label x:Name="Time" Content="Time: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,32,0,0"/>
        <Label x:Name="Scale" Content="Scale: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,59,0,0"/>
        <Slider x:Name="ScaleSlider" HorizontalAlignment="Left" Margin="48,63,0,0" VerticalAlignment="Top" Width="186" Value="250" Maximum="500" ValueChanged="Scale_ValueChanged"/>
    </Grid>
</Window>
